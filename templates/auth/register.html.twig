{% extends 'base.html.twig' %}
{% form_theme registrationForm 'bootstrap_4_layout.html.twig' %}
{% block title %}Enregistrez-vous{% endblock %}

{% block body %}
<div class="container text-white">
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1 class="" >Enregistrez-vous</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.nickname) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}
     
        <button type="submit" class="btn btn-lg btn-primary mt-3">Register</button>
    {{ form_end(registrationForm) }}
    </div>
{% endblock %}
